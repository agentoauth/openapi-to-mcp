{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "packages",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@openmcp/core": ["packages/core/src"],
      "openmcp-core": ["packages/core/src"]
    }
  },
  "include": ["packages/**/*"]
}
